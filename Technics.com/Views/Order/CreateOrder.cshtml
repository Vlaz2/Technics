@using Technics.com
@model Technics.com.ViewModels.OrderWithCustomerViewModel



<form asp-action="PostOrder" method="post" style=" margin-top:6%;margin-left:6%">
    <h4 style=" margin-left:7px;" class="h4 mb-3 font-weight-bold">Оформление заказа</h4>
    <fieldset>
        <label class="control-label" style="margin-left:7px;margin-top:17px" asp-for="User.Name">Имя получателя</label>
        <div class="col-md-10" style="margin-left:-10px">
            <input autocomplete="off" asp-for="User.Name" style="width:300px" readonly class="form-control" required />
            <span asp-validation-for="User.Name" class="text-danger"></span>
        </div>

        <label class="control-label" style="margin-left:7px;margin-top:27px" asp-for="User.LastName">Фамилия получателя</label>
        <div class="col-md-10" style="margin-left:-10px">
            <input autocomplete="off" asp-for="User.LastName" style="width:300px" readonly class="form-control" required />
            <span asp-validation-for="User.LastName" class="text-danger"></span>
        </div>

        <div class="control-group">
            <label class="control-label" style="margin-top:27px">Телефон получателя</label>
            <div class="controls">
                <input type="text" autocomplete="off" asp-for="User.Phone" placeholder="" style="width:300px" readonly required class="form-control">
            </div>
        </div>

        <div class="control-group">
            <label class="control-label" style="margin-top:27px">Город</label>
            <div class="controls">
                <input autocomplete="off" asp-for="Order.ToTown" placeholder="" style="width:300px" required class="form-control">
                <p class="help-block"  style="font-size:14px">Доставка только по городам Украины</p>
            </div>
        </div>

        <div class="control-group">
            <label class="control-label" style="margin-top:7px">Индекс</label>
            <div class="controls">
                <input autocomplete="off" asp-for="Order.PostCode" placeholder="" style="width:300px" required class="form-control">
            </div>
        </div>

        <label class="control-label" style="margin-top:27px" for="password">Способ оплаты:</label>
        <div style="">

            @foreach (var value in Enum.GetValues(typeof(PaymentMethod)))
            {
                if (value.ToString() == "NowToABankCard")
                {
                    <div style=" margin-right:40px;margin-top:-3px;">
                        @Html.RadioButtonFor(x => x.Order.PaymentMethod, value)
                        @Html.Label("Оплата счета по реквизитам 7897512468")
                    </div>
                }
                else
                {
                    <div style=" margin-right:40px;margin-top:-3px">
                        @Html.RadioButtonFor(x => x.Order.PaymentMethod, value)
                        @Html.Label("Оплата при получении")
                    </div>
                }

            }

        </div>
        <div class="control-group">
            <div class="controls">
                <button type="submit" style="background-color:#84837a;margin-top:15px;margin-bottom:40px" class="btn btn-success">Подтвердить</button>
            </div>
        </div>
    </fieldset>
</form>

