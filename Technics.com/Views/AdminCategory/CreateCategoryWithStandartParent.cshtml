@model Technics.com.Models.Category

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CreateCategory</title>
</head>
<body class="body" style="margin-left: 7%; margin-top: 6%">
    <h1 class="h4 mb-3 font-weight-normal">Создание категорий</h1>

    @{
        if (ViewBag.message != null)
        {
            <div class="alert alert-success" style="width:260px;margin-left:-10px;text-align:center" role="alert">
                <strong>@ViewBag.message!</strong>
            </div>
        }
    }

    <a href="@Url.Action("CreateCategoryWithNewParent", "AdminCategory")">
        <img src="https://img.icons8.com/ios/32/000000/four-squares.png" title="С новой родительской категорией" style=" width:25px;height:25px;margin-top:10px;margin-left:220px;" />
    </a>
    <div class="row" style="margin-top:-25px">
        <form asp-action="CreateCategory" method="post" class="form-horizontal" style="width:200px">
            <div class="form-group">
                <label style="margin-left:16px;" asp-for="ParentCategory.CategoryName">Категория родителя</label>
                <select class="custom-select mr-sm-2" id="inlineFormCustomSelect" asp-for="ParentCategory.CategoryName" style="width:200px;margin-left:14px;margin-top:3px">
                    
                    @foreach (var item in ViewBag.NamesParentCategories)
                    {
                        <option>@item</option>
                    }

                </select>
            </div>
            <div class="form-group">
                <label style="margin-left:16px;" asp-for="CategoryName">Подкатегория</label>
                <div class="col-md-10">
                    <input autocomplete="off" asp-for="CategoryName" class="form-control" required style="width:200px;margin-top:3px" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
            </div>
            <button class="btn btn-success" type="submit" style="background-color:#84837a;margin-left:15px;width:100px">Создать</button>
        </form>
    </div>
</body>
</html>
